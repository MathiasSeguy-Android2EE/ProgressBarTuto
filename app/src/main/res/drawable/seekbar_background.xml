<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape  android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:centerColor="#FF777777"
                android:endColor="#FFFFFFFF"
                android:startColor="#FFFFFFFF" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip
            android:clipOrientation="horizontal"
            android:gravity="center" >
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="@color/seek_bar_second_center"
                    android:centerX="0.75"
                    android:endColor="@color/seek_bar_second_end"
                    android:startColor="@color/seek_bar_second_start" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="horizontal"
            android:gravity="left" >
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="@color/seek_bar_progress_center"
                    android:centerX="0.75"
                    android:endColor="@color/seek_bar_progress_end"
                    android:startColor="@color/seek_bar_progress_start" />
            </shape>
        </clip>
    </item>

</layer-list>